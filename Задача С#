string[] input = new string[] { "dog", "bear", "cat", "2", "bird" }; 
    string[] output = new string[input.Length]; 
    int j = 0; 
    for (int i = 0; i < input.Length; i++) 
    {
      if (input[i].Length <= 3)
      { 
        output[j] = input[i];
        j++; 
      }
    }
    Console.WriteLine("Нужный массив:"); 
    for (int i = 0; i < j; i++)
      Console.WriteLine(output[i]);